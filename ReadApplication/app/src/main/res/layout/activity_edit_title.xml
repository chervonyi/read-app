<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".activities.EditTitleActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/mainPadding">

            <EditText
                android:id="@+id/titleEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_hint"
                android:gravity="top"
                android:minLines="2"
                android:maxLines="3"
                android:textSize="@dimen/headerFontSize"
                android:fontFamily="@font/cabin_semi_bold"
                android:textColor="@color/colorFontMain"
                android:inputType="textCapSentences|textMultiLine"
                android:importantForAutofill="no"/>

            <EditText
                android:id="@+id/descriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/description_hint"
                android:gravity="top"
                android:minLines="4"
                android:maxLines="5"
                android:textSize="@dimen/mainFontSize"
                android:fontFamily="@font/cabin_regular"
                android:textColor="@color/colorFontMain"
                android:inputType="textCapSentences|textMultiLine"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/bodyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_hint"
                android:gravity="top"
                android:minLines="4"
                android:textSize="@dimen/mainFontSize"
                android:fontFamily="@font/cabin_regular"
                android:textColor="@color/colorFontMain"
                android:inputType="textCapSentences|textMultiLine"
                android:importantForAutofill="no" />

            <room106.app.read.views.MainButton
                android:id="@+id/saveTitleButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/itemHeight"
                android:text="@string/save"
                android:onClick="onClickSave"/>

            <Button
                android:id="@+id/publishTitleButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/itemHeight"
                android:layout_marginTop="14dp"
                android:background="@drawable/content_panel"
                android:text="@string/publish"
                android:textAllCaps="false"
                android:textColor="@color/colorFontPublishButton"
                android:textSize="@dimen/buttonFontSize"
                android:fontFamily="@font/cabin_semi_bold"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:focusable="false"
                android:onClick="onClickPublish"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:layout_scrollFlags="scroll|enterAlways">

            <ImageButton
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:background="@null"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                android:contentDescription="@string/button_back_content_description"
                android:onClick="onClickBack"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageButton
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:background="@null"
                android:src="@drawable/ic_more"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:contentDescription="@string/button_more_content_description"
                android:onClick="onClickMore"/>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>