<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeAvatarActivity"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:background="@null"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/button_back_content_description" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finish"
            android:textAllCaps="false"
            android:fontFamily="@font/cabin_semi_bold"
            android:textSize="@dimen/buttonFontSize"
            android:textColor="@color/colorAccent"
            android:background="@null"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:paddingTop="@dimen/mainPadding"
        android:paddingStart="@dimen/mainPadding"
        android:paddingEnd="@dimen/mainPadding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/mainPadding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_avatar_title"
                android:textSize="@dimen/headerFontSize"
                android:textColor="@color/colorFontMain"
                android:fontFamily="@font/cabin_semi_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/change_avatar_hint"
                android:textSize="@dimen/hintFontSize"
                android:textColor="@color/colorFontSub"
                android:fontFamily="@font/cabin_semi_bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mainPadding"
                android:orientation="vertical"
                android:background="@drawable/user_stats_panel"
                android:padding="20dp"
                android:divider="@drawable/divider_avatars_list"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:divider="@drawable/divider_avatars_list"
                    android:showDividers="middle">

                    <room106.app.read.views.SelectAvatarImageButton
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:avatar="@drawable/ic_avatar_0"/>

                    <room106.app.read.views.SelectAvatarImageButton
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:avatar="@drawable/ic_avatar_1"/>

                    <room106.app.read.views.SelectAvatarImageButton
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:avatar="@drawable/ic_avatar_2"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:divider="@drawable/divider_avatars_list"
                    android:showDividers="middle">

                    <room106.app.read.views.SelectAvatarImageButton
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:avatar="@drawable/ic_avatar_3"/>

                    <room106.app.read.views.SelectAvatarImageButton
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:avatar="@drawable/ic_avatar_4"/>

                    <room106.app.read.views.SelectAvatarImageButton
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:avatar="@drawable/ic_avatar_5"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:divider="@drawable/divider_avatars_list"
                    android:showDividers="middle">

                    <room106.app.read.views.SelectAvatarImageButton
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:avatar="@drawable/ic_avatar_6"/>

                    <room106.app.read.views.SelectAvatarImageButton
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:avatar="@drawable/ic_avatar_7"/>

                    <room106.app.read.views.SelectAvatarImageButton
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:avatar="@drawable/ic_avatar_8"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:divider="@drawable/divider_avatars_list"
                    android:showDividers="middle">

                    <room106.app.read.views.SelectAvatarImageButton
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:avatar="@drawable/ic_avatar_9"/>

                    <room106.app.read.views.SelectAvatarImageButton
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:avatar="@drawable/ic_avatar_10"/>

                    <room106.app.read.views.SelectAvatarImageButton
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:avatar="@drawable/ic_avatar_11"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:divider="@drawable/divider_avatars_list"
                    android:showDividers="middle">

                    <room106.app.read.views.SelectAvatarImageButton
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:avatar="@drawable/ic_avatar_12"/>

                    <room106.app.read.views.SelectAvatarImageButton
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:avatar="@drawable/ic_avatar_13"/>

                    <room106.app.read.views.SelectAvatarImageButton
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:avatar="@drawable/ic_avatar_14"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>