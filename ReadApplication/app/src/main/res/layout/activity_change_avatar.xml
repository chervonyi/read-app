<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeAvatarActivity"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backImageButton"
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:background="@null"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/button_back_content_description"
            android:onClick="onClickBack"
            android:visibility="invisible"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/finishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finish"
            android:textAllCaps="false"
            android:fontFamily="@font/cabin_semi_bold"
            android:textSize="@dimen/buttonFontSize"
            android:textColor="@color/colorAccent"
            android:background="@null"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="onClickFinish"/>

    </LinearLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:paddingTop="@dimen/mainPadding"
        android:paddingStart="@dimen/mainPadding"
        android:paddingEnd="@dimen/mainPadding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/mainPadding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_avatar_title"
                android:textSize="@dimen/headerFontSize"
                android:textColor="@color/colorFontMain"
                android:fontFamily="@font/cabin_semi_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/change_avatar_hint"
                android:textSize="@dimen/hintFontSize"
                android:textColor="@color/colorFontSub"
                android:fontFamily="@font/cabin_semi_bold"/>

            <LinearLayout
                android:id="@+id/avatarsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mainPadding"
                android:orientation="vertical"
                android:background="@drawable/user_stats_panel"
                android:padding="20dp"
                android:divider="@drawable/divider_avatars_list"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:divider="@drawable/divider_avatars_list"
                    android:showDividers="middle">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:tag="0"
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:riv_corner_radius="@dimen/avatarCornersRadius"
                        app:riv_border_color="@android:color/transparent"
                        app:riv_border_width="@dimen/selectedAvatarBorderWidth"
                        android:src="@drawable/ic_avatar_0"
                        android:onClick="onSelectAvatar"/>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:tag="1"
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:riv_corner_radius="@dimen/avatarCornersRadius"
                        app:riv_border_color="@android:color/transparent"
                        app:riv_border_width="@dimen/selectedAvatarBorderWidth"
                        android:src="@drawable/ic_avatar_1"
                        android:onClick="onSelectAvatar"/>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:tag="2"
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:riv_corner_radius="@dimen/avatarCornersRadius"
                        app:riv_border_color="@android:color/transparent"
                        app:riv_border_width="@dimen/selectedAvatarBorderWidth"
                        android:src="@drawable/ic_avatar_2"
                        android:onClick="onSelectAvatar"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:divider="@drawable/divider_avatars_list"
                    android:showDividers="middle">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:tag="3"
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:riv_corner_radius="@dimen/avatarCornersRadius"
                        app:riv_border_color="@android:color/transparent"
                        app:riv_border_width="@dimen/selectedAvatarBorderWidth"
                        android:src="@drawable/ic_avatar_3"
                        android:onClick="onSelectAvatar"/>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:tag="4"
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:riv_corner_radius="@dimen/avatarCornersRadius"
                        app:riv_border_color="@android:color/transparent"
                        app:riv_border_width="@dimen/selectedAvatarBorderWidth"
                        android:src="@drawable/ic_avatar_4"
                        android:onClick="onSelectAvatar"/>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:tag="5"
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:riv_corner_radius="@dimen/avatarCornersRadius"
                        app:riv_border_color="@android:color/transparent"
                        app:riv_border_width="@dimen/selectedAvatarBorderWidth"
                        android:src="@drawable/ic_avatar_5"
                        android:onClick="onSelectAvatar"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:divider="@drawable/divider_avatars_list"
                    android:showDividers="middle">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:tag="6"
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:riv_corner_radius="@dimen/avatarCornersRadius"
                        app:riv_border_color="@android:color/transparent"
                        app:riv_border_width="@dimen/selectedAvatarBorderWidth"
                        android:src="@drawable/ic_avatar_6"
                        android:onClick="onSelectAvatar"/>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:tag="7"
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:riv_corner_radius="@dimen/avatarCornersRadius"
                        app:riv_border_color="@android:color/transparent"
                        app:riv_border_width="@dimen/selectedAvatarBorderWidth"
                        android:src="@drawable/ic_avatar_7"
                        android:onClick="onSelectAvatar"/>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:tag="8"
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:riv_corner_radius="@dimen/avatarCornersRadius"
                        app:riv_border_color="@android:color/transparent"
                        app:riv_border_width="@dimen/selectedAvatarBorderWidth"
                        android:src="@drawable/ic_avatar_8"
                        android:onClick="onSelectAvatar"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:divider="@drawable/divider_avatars_list"
                    android:showDividers="middle">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:tag="9"
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:riv_corner_radius="@dimen/avatarCornersRadius"
                        app:riv_border_color="@android:color/transparent"
                        app:riv_border_width="@dimen/selectedAvatarBorderWidth"
                        android:src="@drawable/ic_avatar_9"
                        android:onClick="onSelectAvatar"/>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:tag="10"
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:riv_corner_radius="@dimen/avatarCornersRadius"
                        app:riv_border_color="@android:color/transparent"
                        app:riv_border_width="@dimen/selectedAvatarBorderWidth"
                        android:src="@drawable/ic_avatar_10"
                        android:onClick="onSelectAvatar"/>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:tag="11"
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:riv_corner_radius="@dimen/avatarCornersRadius"
                        app:riv_border_color="@android:color/transparent"
                        app:riv_border_width="@dimen/selectedAvatarBorderWidth"
                        android:src="@drawable/ic_avatar_11"
                        android:onClick="onSelectAvatar"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:divider="@drawable/divider_avatars_list"
                    android:showDividers="middle">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:tag="12"
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:riv_corner_radius="@dimen/avatarCornersRadius"
                        app:riv_border_color="@android:color/transparent"
                        app:riv_border_width="@dimen/selectedAvatarBorderWidth"
                        android:src="@drawable/ic_avatar_12"
                        android:onClick="onSelectAvatar"/>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:tag="13"
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:riv_corner_radius="@dimen/avatarCornersRadius"
                        app:riv_border_color="@android:color/transparent"
                        app:riv_border_width="@dimen/selectedAvatarBorderWidth"
                        android:src="@drawable/ic_avatar_13"
                        android:onClick="onSelectAvatar"/>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:tag="14"
                        android:layout_width="@dimen/avatarSize"
                        android:layout_height="@dimen/avatarSize"
                        app:riv_corner_radius="@dimen/avatarCornersRadius"
                        app:riv_border_color="@android:color/transparent"
                        app:riv_border_width="@dimen/selectedAvatarBorderWidth"
                        android:src="@drawable/ic_avatar_14"
                        android:onClick="onSelectAvatar"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>