<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.UserActivity"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/userTitlesFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:menu="@menu/current_user_menu"
            app:layout_scrollFlags="scroll"
            app:theme="@style/ToolBarStyle"
            app:popupTheme="@style/AppTheme"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:gravity="center"
            android:padding="@dimen/mainPadding"
            app:layout_scrollFlags="scroll">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/userAvatarImageView"
                android:layout_width="@dimen/avatarSize"
                android:layout_height="@dimen/avatarSize"
                android:background="@drawable/avatar_tmp"
                android:contentDescription="@string/user_avatar_content_description"
                app:riv_corner_radius="@dimen/avatarCornersRadius"/>

            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/user_name"
                android:textSize="22sp"
                android:textColor="@color/colorFontMain"
                android:fontFamily="@font/cabin_semi_bold"/>


            <!--    User Stats Panel   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:padding="14dp"
                android:background="@drawable/content_panel">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/userTitlesCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/titles_count_tmp"
                        android:textSize="22sp"
                        android:textColor="@color/colorFontUserStatsNumbers"
                        android:fontFamily="@font/cabin_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_stats_titles"
                        android:textSize="16sp"
                        android:textColor="@color/colorFontUserStatsNumbers"
                        android:fontFamily="@font/cabin_regular"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorUserStatsDivider"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/userFollowersCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/followers_count_tmp"
                        android:textSize="22sp"
                        android:textColor="@color/colorFontUserStatsNumbers"
                        android:fontFamily="@font/cabin_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_stats_followers"
                        android:textSize="16sp"
                        android:textColor="@color/colorFontUserStatsNumbers"
                        android:fontFamily="@font/cabin_regular"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorUserStatsDivider"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/userLikesCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/likes_count_tmp"
                        android:textSize="22sp"
                        android:textColor="@color/colorFontUserStatsNumbers"
                        android:fontFamily="@font/cabin_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_stats_likes"
                        android:textSize="16sp"
                        android:textColor="@color/colorFontUserStatsNumbers"
                        android:fontFamily="@font/cabin_regular"/>

                </LinearLayout>

            </LinearLayout>

            <room106.app.read.views.MainButton
                android:id="@+id/createNewTitleButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonHeight"
                android:layout_marginTop="20dp"
                android:text="@string/create_new_title_button"
                android:onClick="onClickCreateNewTitle"/>

            <room106.app.read.views.MainButton
                android:id="@+id/followButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonHeight"
                android:layout_marginTop="20dp"
                android:text="@string/follow"
                android:onClick="onClickFollow"
                android:visibility="gone"/>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>