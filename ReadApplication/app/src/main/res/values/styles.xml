<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTabStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/tabFontSize</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorTab</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabIndicatorHeight">@dimen/tabIndicatorHeight</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:tint">@color/colorIcons</item>
        <item name="colorControlHighlight">@color/colorToolbarRipple</item>
    </style>

</resources>